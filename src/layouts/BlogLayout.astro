---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;

const formatDate = (date: Date): string => {
  const nth = (day: number): string => {
    if (day > 3 && day < 21) return "th";
    switch (day % 10) {
      case 1:
        return "st";
      case 2:
        return "nd";
      case 3:
        return "rd";
      default:
        return "th";
    }
  };

  const parts = new Intl.DateTimeFormat("en-US", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }).formatToParts(date);

  return parts
    .map((part) => {
      if (part.type === "day") {
        return `${part.value}${nth(parseInt(part.value))}`;
      }
      return part.value;
    })
    .join("");
};
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article
    class="prose lg:prose-xl prose-slate dark:prose-invert hover:prose-headings:underline prose-headings:text-teal-300"
  >
    <h1 class="leading-tight font-bold text-3xl text-slate-200">
      {frontmatter.title}
    </h1>
    <p class="pt-2 pb-8">{formatDate(frontmatter.pubDate)}</p>
    <slot />
    <p class="pt-8 font-medium text-slate-200">
      Written by {frontmatter.author}
    </p>
  </article>
</Layout>
