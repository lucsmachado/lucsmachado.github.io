---
interface Props {
  position: string;
  company: {
    name: string;
    website: string;
  };
  duration: {
    start: string;
    end: string;
  };
  description: string;
  skills: string[];
}

const { position, company, duration, description, skills } = Astro.props;
---

<div class="flex sm:gap-8 md:gap-4">
  <header
    class="w-1/3 text-sm font-semibold uppercase tracking-wide text-slate-500"
  >
    {duration.start} - {duration.end}
  </header>
  <div class="w-2/3">
    <a
      href={company.website}
      target="_blank"
      aria-label={`${position} at ${company.name} (open in new tab)`}
    >
      <h3
        class="font-medium leading-tight text-base text-slate-200 hover:text-teal-300 focus-visible:text-teal-300"
      >
        {position} Â· {company.name}
      </h3>
    </a>
    <div class="pt-4">
      <p class="text-sm leading-normal">{description}</p>
      <ul class="pt-4 flex flex-wrap">
        {
          skills.map((skill) => (
            <li class="rounded-full bg-teal-400/10 px-3 py-1 text-sm font-medium leading-5 text-teal-300 mr-2 mb-2">
              {skill}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>
