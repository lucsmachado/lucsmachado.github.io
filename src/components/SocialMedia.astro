---
import Icon from "astro-icon";

interface Props {
  label: string;
  icon: string;
  url: string;
}

const { label, icon, url } = Astro.props;
---

<a href={url} target="_blank" title={`${label} (open in new tab)`}>
  <span class="sr-only">{label}</span>
  <Icon
    name={icon}
    class="w-10 aspect-square opacity-50 hover:opacity-100 ease-in duration-200"
  />
</a>
